<%- include ../partals/headder.ejs %> 

<%- include ../partals/main_nav.ejs %> 

<main class="container">

    <div class="row">
        <div class = "offset-md-1 col-md-10">
        <h1 style="color: white;"> <br> - <br> </h1>
       
        <h1> <%= title  %> </h1>
        <a href ="/page-items/add" class = "btn btn-primary" roll = "button"> add contact </a>
        
       <table class ="table table-bordered table-striped table-hover">
            <!--header-->
            <tr>
                <th class = "text-center">Name</th>
                <th class = "text-center">contact number</th>
                <th class = "text-center">email</th>
                <th class = "text-center"></th>
                <th class = "text-center"></th>
            </tr>
        <!--repeatable-->
            <% for(let count = 0; count < PageLists.length; count++) { %>

                <tr>
                    <td class = "text-center"><%= PageLists[count].name %></td>
                    <td class = "text-center"><%= PageLists[count].contact %></td>
                    <td class = "text-center"><%= PageLists[count].email %></td>
                    <td class = "text-center">
                        <a href ="/page-items/edit/<%= PageLists[count]._id %> " class = "btn btn-primary btn-sm" > edit</a>
                    </td>
                    <td class = "text-center">
                        <a href ="/page-items/delete/<%= PageLists[count]._id %> " class = "btn btn-danger btn-sm" > delete</a>
                    </td>
                    
                </tr>

                   
                <% }%>
                  

            </table>
        </div>
    </div>
</main>



